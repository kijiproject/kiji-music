<?xml version="1.0" encoding="UTF-8"?>
<stores>
  <store name="nextPlayed" class="org.kiji.mapreduce.kvstore.lib.KijiTableKeyValueStore">
    <configuration>
      <property>
        <name>table.uri</name>
        <!-- ${KIJI} should be replaced with the URI of the songs table to use. -->
        <value>${KIJI}/songs</value> <!-- The default URI would be kiji://.env/default/songs -->
      </property>
      <property>
        <name>column</name>
        <value>info:top_next_songs</value>
       </property>
       <property>
         <name>avro.reader.schema</name>
         <value>org.kiji.examples.music.TopSongs</value>
        </property>
    </configuration>
  </store>
</stores>
